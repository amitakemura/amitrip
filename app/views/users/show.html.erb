<h1>マイページ</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>


<div class="hawaiian">

    <% @user.hawaiians.each do |t| %>
        <%= image_tag t.image2_url, size: "250x200" if t.image2? %>

        <%= t.name %>
        <%= t.country %>
        <%= t.city %>
        <%= t.about %>
        <%= t.more %>
     
     <% end %> 

</div>

<% if current_user.id == @user.id %>
  <%= link_to "マイページ編集", edit_user_registration_path %>
<% end %>

<%= link_to "一覧に戻る", hawaiians_path %>